<UserControl x:Class="Playground.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Playground"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="70">
    <Border Margin="3">
        <StackPanel Background="LightGray" VerticalAlignment="Center">
            <RichTextBox Name ="Title" Grid.Column="0" Grid.Row="0" MinHeight="30" TextBlock.FontWeight="Bold" TextBlock.FontSize="15" TextBlock.TextAlignment="Center"/>
            <RichTextBox Name="Description" Grid.Column="0" Grid.Row="1" MinHeight="30" TextBlock.FontWeight="Medium" TextBlock.FontSize="12" TextBlock.TextAlignment="Justify"/>
            <RichTextBox Name="Assignee" Grid.Column="0" Grid.Row="2" MinHeight="30" TextBlock.FontWeight="Light" TextBlock.FontSize="10" TextBlock.TextAlignment="Right"/>
        </StackPanel>
    </Border>
</UserControl>
